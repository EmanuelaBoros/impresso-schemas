{
   "definitions": {},
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "https://impresso.github.io/impresso-schemas/json/newspaper/ling.schema.json",
   "type": "object",
   "description": "Schema for validation of linguistic annotation as produced by spacy for newspaper data"
   "required": [
     "id",
     "sents"
   ],
   "properties": {
     "id": {
       "$id": "#/properties/id",
       "type": "string",
       "title": "The Id Schema",
       "description": "id of text",
       "examples": [
         "NZZ-1794-07-26-a-i0002"
       ],
       "pattern": "^(.*)$"
     },
     "sents": {
       "$id": "#/properties/sents",
       "type": "array",
       "title": "The Sents Schema",
		  "description": "container for sentences (boundaries produced by spacy)",
       "items": {
         "$id": "#/properties/sents/items",
         "type": "object",
         "title": "The Items Schema",
         "required": [
           "sid",
           "tok"
         ],
         "properties": {
           "sid": {
             "$id": "#/properties/sents/items/properties/sid",
             "type": "integer",
             "title": "The Sid Schema",
                "description": "Sentence ids",
             "examples": [
               1
             ]
           },
           "tok": {
             "$id": "#/properties/sents/items/properties/tok",
             "type": "array",
             "title": "The Tok Schema",
                "description": "container for tokens",
             "items": {
               "$id": "#/properties/sents/items/properties/tok/items",
               "type": "object",
               "title": "The Items Schema",
               "required": [
                 "tid",
                 "t",
                 "l",
                 "p",
                 "idx",
                 "ner",
                 "iob"
               ],
               "properties": {
                 "tid": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/tid",
                   "type": "integer",
                   "title": "The Tid Schema",
                   "description": "Token id",
                   "examples": [
                     1
                   ]
                 },
                 "t": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/t",
                   "type": "string",
                   "title": "The T Schema",
                   "description": "token text",
                   "examples": [
                     "Kumpel"
                   ],
                   "pattern": "^(.*)$"
                 },
                 "l": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/l",
                   "type": "string",
                   "title": "The L Schema",
                   "description": "token lemma",
                   "examples": [
                     "Kumpel"
                   ],
                   "pattern": "^(.*)$"
                 },
                 "p": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/p",
                   "type": "string",
                   "title": "The P Schema",
                   "description": "token lemma",
                   "examples": [
                     "NOUN"
                   ],
                   "pattern": "^(.*)$"
                 },
                 "idx": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/idx",
                   "type": "integer",
                   "title": "The Idx Schema",
                   "description": "character offset corresponding to position in ft element"
                   "examples": [
                     0
                   ]
                 },
                 "ner": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/ner",
                   "type": "string",
                   "title": "The Ner Schema",
                   "description": "named entity type",
                   "examples": [
                     "LOC"
                   ],
                   "pattern": "^(.*)$"
                 },
                 "iob": {
                   "$id": "#/properties/sents/items/properties/tok/items/properties/iob",
                   "type": "string",
                   "title": "The Iob Schema",
                   "description": "continuation of named entities in IOB schema",
                   "examples": [
                     "B"
                   ],
                   "pattern": "^(.*)$"
                 }
               }
             }
           }
         }
       }
     }
   }
 }
